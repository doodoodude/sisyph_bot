<launch>

<arg name="cam0_name" default="cam0"/>
<arg name="cam1_name" default="cam1"/>
<arg name="cam0_dev" value="/dev/video4"/>
<arg name="cam1_dev" value="/dev/video2"/>

<arg name="image" default="image_raw"/>
<arg name="transport" default="compressed"/>
<arg name="fiducial_len" default="0.202"/>
<arg name="dictionary" default="10"/>  
<arg name="do_pose_estimation" default="true"/>
<arg name="vis_msgs" default="false"/>
<arg name="ignore_fiducials" default="" />
<arg name="fiducial_len_override" default="" />
<arg name="verbose" default="false"/>

<group ns="aruco_$(arg cam0_name)">
  <node pkg="aruco_detect" name="$(arg cam0_name)_aruco_detect"
    type="aruco_detect" output="screen" respawn="false">
    <param name="image_transport" value="$(arg transport)"/>
    <param name="publish_images" value="true" />
    <param name="fiducial_len" value="$(arg fiducial_len)"/>
    <param name="dictionary" value="$(arg dictionary)"/>
    <param name="do_pose_estimation" value="$(arg do_pose_estimation)"/>
    <param name="vis_msgs" value="$(arg vis_msgs)"/>
    <param name="ignore_fiducials" value="$(arg ignore_fiducials)"/>
    <param name="fiducial_len_override" value="$(arg fiducial_len_override)"/>
    <param name="verbose" value="$(arg verbose)"/>
    <remap from="camera/compressed"
        to="$(arg cam0_name)/$(arg image)/$(arg transport)"/>
    <remap from="camera_info" to="$(arg cam0_name)/camera_info"/>
  </node>
</group>

<group ns="aruco_$(arg cam1_name)">
  <node pkg="aruco_detect" name="$(arg cam1_name)_aruco_detect"
    type="aruco_detect" output="screen" respawn="false">
    <param name="image_transport" value="$(arg transport)"/>
    <param name="publish_images" value="true" />
    <param name="fiducial_len" value="$(arg fiducial_len)"/>
    <param name="dictionary" value="$(arg dictionary)"/>
    <param name="do_pose_estimation" value="$(arg do_pose_estimation)"/>
    <param name="vis_msgs" value="$(arg vis_msgs)"/>
    <param name="ignore_fiducials" value="$(arg ignore_fiducials)"/>
    <param name="fiducial_len_override" value="$(arg fiducial_len_override)"/>
    <param name="verbose" value="$(arg verbose)"/>
    <remap from="camera/compressed"
        to="$(arg cam1_name)/$(arg image)/$(arg transport)"/>
    <remap from="camera_info" to="$(arg cam1_name)/camera_info"/>
  </node>
</group>



</launch>
